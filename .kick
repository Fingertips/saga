recipe :ignore
ignore(/(^tmp|\.DS_Store)$/)

recipe :ruby
process do |files|
  Ruby.run_tests(files.take_and_map do |file|
    case file
    when %r{^lib/(.+)\.rb$}
      "test/#{$1.gsub('/', '_')}_spec.rb"
    when %r{^templates}
      "test/saga_formatter_spec.rb"
    when %r{^test/(.+)_spec\.rb$}
      file
    when %r{^test/cases}
      "test/saga_tokenizer_spec.rb"
    end
  end)
end
